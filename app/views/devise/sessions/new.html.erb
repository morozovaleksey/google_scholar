<!-- Page Content -->
<div class="container">

  <div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

      <!-- Title -->
      <h1 class="header">Система оценки эффективности поиска научной информации</h1>

      <!-- Preview Image -->
      <div id="logo">

      </div>
      <hr>
      <div id="search-efficiency-region">
        <h4>Для работы с системой необходима авторизация</h4>
        <hr>

            <h2 class="header">Авторизация</h2>
        <div class="auth_reg">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div><%= f.label :email do %>
                      Введите email
                  <% end %>
                  <br />
                  <%= f.email_field :email, autofocus: true %></div>

                <div><%= f.label :password do %>
                      Введите пароль
                  <% end %>
                  <br />
                  <%= f.password_field :password, autocomplete: "off" %></div>

                <% if devise_mapping.rememberable? -%>
                    <div><%= f.check_box :remember_me %> <%= f.label :remember_me do %> Запомнить меня <% end %></div>
                <% end -%>

                <div><%= f.submit "Вход" %></div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>

      </div>

      <hr>
    </div>
