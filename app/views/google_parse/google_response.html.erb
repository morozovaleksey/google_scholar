<!-- Page Content -->
<div class="container">

  <div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

      <!-- Title -->
      <h1>Google scholar</h1>

      <!-- Preview Image -->
      <div id="logo">
        <img class="img-responsive" src="http://scholar.google.com.ua/intl/ru/scholar/images/scholar_logo_lg_2011.gif" alt="">
      </div>
      <hr>
      <div id="search-region">
        <h2>Найденные статьи</h2>
        <p> Найденно документов: <%= @response[:count_result] %></p>
        <p> Запрос: <%= @query_string %></p>
        <div>
            <% @response[:text_result].each  do |key, value| %>
                <p><a href="<%= value %>"><%= key %> </a></p>
            <% end %>
        </div>

        <%= form_for :relevant, url: search_efficiency_path do |f| %>

           <%= f.text_field :query_string, {:hidden =>"", :value => @query_string} %>
           <%= f.text_field :page_number, {:hidden =>"", :value =>  @page_number} %>
            <%= f.submit 'Заполнить', :class => 'btn btn-primary', :name => 'number_page[number]' %>

        <% end %>

        <%= form_for :number_page do |f| %>

            <%= f.text_field :query_string, {:hidden =>"", :value => @query_string} %>

            <%= f.submit '1', :class => 'btn btn-primary', :name => 'number_page[number]' %>
            <%= f.submit '2', :class => 'btn btn-primary', :name => 'number_page[number]' %>
            <%= f.submit '3', :class => 'btn btn-primary', :name => 'number_page[number]' %>
            <%= f.submit '4', :class => 'btn btn-primary', :name => 'number_page[number]' %>
            <%= f.submit '5', :class => 'btn btn-primary', :name => 'number_page[number]' %>
        <% end %>


      </div>

      <hr>
    </div>
    <div class="col-lg-8">

    </div>
